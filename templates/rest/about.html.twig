    <div class="col p-3">
        <h1>Contact us</h1>
        <p>Send and email and get a response within 2 working days</p>
        {{ form_start(contactForm) }}
        <div class="name-form">
        {{ form_row(contactForm.first_name, {
            label: 'First name',
            'attr': {'class': 'form-control'}
        }) }}
        {{ form_row(contactForm.last_name, {
            label: 'Last name',
            'attr': {'class': 'form-control'}
        }) }}
        </div>
        {{ form_row(contactForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(contactForm.msg, {
            label: 'Message',
            'attr': {'class': 'form-control'}
        }) }}
            {{ form_row(contactForm.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_end(contactForm) }}

    </div>
