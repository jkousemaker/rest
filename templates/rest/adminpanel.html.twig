{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Admin Panel{% endblock %}
{% block body %}
    <div class="admin-panel">
        <h1>Admin Panel</h1>
        <div class="admin-pills">
            <div class="admin-pill">
                <a href="{{ path('adminpanel')}}">Orders</a>
            </div>
            <div class="admin-pill">
                <a href="{{ path('adminpanel', {page:1}) }}">Messages</a>
            </div>
        </div>
        {% if page == 0 %}
            <table>
                <tr>
                    <th>Full name</th>
                    <th>Adress</th>
                    <th>Product</th>
                    <th>Amount</th>
                    <th>Price</th>
                </tr>
                <tr>
                    <td>Justin Kousemaker</td>
                    <td>Den Haag, Isabellaland 930, 2591ST</td>
                    <td>
                        <p>Pepperoni</p>
