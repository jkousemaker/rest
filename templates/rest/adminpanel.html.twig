                    </td>
                    <td>
                        <p>1</p>
                        <p>2</p>
                    </td>
                    <td>
                        <p>10$</p>
                        <p>16$</p>
                    </td>
                </tr>
            </table>
        {% else %}
            <div class="admin-messages">
                <div class="admin-message">
                    <h1>Title</h1>
                    <h4>Name User</h4>
                    <p>Email User</p>
                    <p>Date submitted</p>
                    <p>Message</p>
                </div>
                <div class="admin-message">
                    <h1>Title</h1>
                    <h4>Name User</h4>
                    <p>Email User</p>
                    <p>Date submitted</p>
                    <p>Message</p>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}